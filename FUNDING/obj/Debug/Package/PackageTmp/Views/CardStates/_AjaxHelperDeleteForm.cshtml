@model FUNDING.BL.BusinessEntities.Masters.CardStates_Master

@{
    AjaxOptions deleteCardStateAjaxOptions = new AjaxOptions();
    deleteCardStateAjaxOptions.HttpMethod = "POST";
    //deleteCardStateAjaxOptions.UpdateTargetId = "divCardState";
