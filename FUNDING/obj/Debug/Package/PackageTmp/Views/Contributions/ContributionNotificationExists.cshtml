@model FUNDING.Models.CollectionModule.ContributionNotification

@{
    ViewBag.Title = "Contributions Notifications";
    Layout = "~/Views/Shared/_Customers.cshtml";


    ViewData["Title"] = "Contributions Notifications";
    ViewData["Home"] = "Home";
    ViewData["Bct"] = "Save";

}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">@ViewData["Title"]</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard", "CustomerActivity")">@ViewData["Home"]</a>
                </li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </div>
    </div>
</div>
<div class="card border-0">
    <div class="card-body">
        <div class="col-sm-11 col-md-11 col-lg-8">
            <div class="row">
                <div class="form-group col-sm-8 col-md-6">
                    @Html.LabelFor(model => model.Formated_Intimate_Date, htmlAttributes: new { @class = "control-label no-pointer-event" })
                    @Html.TextBoxFor(model => model.Formated_Intimate_Date, new { @class = "form-control mw-100", @readonly = "readonly" })
                </div>

                <div class="form-group col-sm-8 col-md-6">
                    @Html.LabelFor(model => model.Intimate_Days, htmlAttributes: new { @class = "control-label no-pointer-event" })
                    @Html.TextBoxFor(model => model.Intimate_Days, new { @class = "form-control mw-100", @readonly = "readonly" })
                </div>
            </div>
        </div>
    </div>
</div>


@section styles{
    <link rel="stylesheet" href="~/assets/datepicker/gijgo.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" />


    <style>

        div.gj-datepicker, div.gj-timepicker {
            max-width: 100%;
        }

        .datepicker td, .datepicker th {
            padding: 3px !important;
        }
    </style>
}
