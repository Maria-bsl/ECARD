@model FUNDING.Models.CardGenerationModule.DataLayer.CardEventDetailsViewModel



<div class="heading-text pb-4 pt-2">
    <h3 class="">Fill Text</h3>
</div>

<div class="form-group mb-3">
    @Html.Label("Event Of Choice", new { @class = "d-block mb-1" })
    @Html.DropDownList("Events", ViewBag.EventsList as IEnumerable<SelectListItem>, "Please select event", new { @class = "form-control mw-100" })
</div>

<hr />

<div class="form-group mb-3">
    @Html.LabelFor(model => model.EventHost, "Event Host", new { @class = "mb-1" })
    @Html.TextBoxFor(model => model.EventHost, new { @class = "form-control", data_content = "event-inviter", placeholder = "Event Host" })
</div>

<div class="form-check mb-3">
    @Html.CheckBoxFor(model => model.ShowCardSize, new { @class = "form-check-input" })
    @Html.LabelFor(model => model.ShowCardSize, "Display Card Size", new { @class = "form-check-label" })
</div>

<div class="form-check mb-3">
    @Html.CheckBox("table_number", new { @class = "form-check-input" })
    @Html.Label("table_number", "Display Table Number", new { @class = "form-check-label" })
</div>

<div class="form-group mb-3" style="display: none;">
    @Html.Label("table_number_label", "Event Host", new { @class = "mb-1" })
    @Html.TextBox("table_number_label", new { @class = "form-control", data_content = "event-inviter", placeholder = "Event Host" })
</div>

<hr />

<div class="accordion" id="accordionExample">
    <div class="accordion-item">
        <h2 class="accordion-header" id="textElementFinePositioning">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                Text Element Positioning
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="textElementFinePositioning" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Top Position</label>
                            <input id="invitee-details-topPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Left Position</label>
                            <input id="invitee-details-leftPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="cardSizeFinePositioning">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseCardSize" aria-expanded="false" aria-controls="collapseOne">
                Card Size Positioning
            </button>
        </h2>
        <div id="collapseCardSize" class="accordion-collapse collapse" aria-labelledby="cardSizeFinePositioning" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Top Position</label>
                            <input id="card-size-label-topPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Left Position</label>
                            <input id="card-size-label-leftPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="tableNumberLabelElementFinePositioning">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTableNumberLabel" aria-expanded="false" aria-controls="collapseTableNumberLabel">
                Table Label Positioning
            </button>
        </h2>
        <div id="collapseTableNumberLabel" class="accordion-collapse collapse" aria-labelledby="tableNumberLabelElementFinePositioning" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Top Position</label>
                            <input id="tableNumberLabel-details-topPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Left Position</label>
                            <input id="tableNumberLabel-details-leftPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="tableNumberDigitElementFinePositioning">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTableNumberDigit" aria-expanded="false" aria-controls="collapseTableNumberDigit">
                Table Digit Positioning
            </button>
        </h2>
        <div id="collapseTableNumberDigit" class="accordion-collapse collapse" aria-labelledby="tableNumberDigitElementFinePositioning" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Top Position</label>
                            <input id="tableNumberDigit-details-topPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>

                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Left Position</label>
                            <input id="tableNumberDigit-details-leftPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="QR-CodeFinePositioning">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                QR Code Positioning
            </button>
        </h2>
        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="QR-CodeFinePositioning" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group mb-3">
                            <label class="w-100 text-center">Top Position</label>
                            <input id="qr-code-topPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="w-100 text-center">Left Position</label>
                            <input id="qr-code-leftPosition-ui" type="number" class="form-control px-1 text-center" minlength="1" maxlength="3">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="accordion-item">
        <h2 class="accordion-header" id="QR-CodeResizing">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                QR Code Resizing
            </button>
        </h2>
        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="QR-CodeResizing" data-bs-parent="#accordionExample">
            <div class="accordion-body py-1">
                <div class="form-group">
                    <label class="mb-2">QR Code Size</label>
                    <input id="qr-code-size-ui" type="number" class="form-control px-1 text-center" min="0">
                </div>
            </div>
        </div>
    </div>
</div>

<br />


