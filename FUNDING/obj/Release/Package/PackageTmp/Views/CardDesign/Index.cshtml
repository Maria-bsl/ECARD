                        </div>

                        <div class="draggable card-item" data-content="event-start-time">
                        </div>

                        <div class="draggable card-item" data-content="event-venue">
                        </div>

                        <div class="draggable card-item" data-content="event-reservation">
                        </div>*@

                    <div class="draggable card-item card-qr-code" data-content="invitee-qr-code">
                    </div>

                </div>
            </div>
            <div class="bottom-controls"></div>
        </div>
    </div>
</div>


@section styles{
    <link href="~/Scripts/jquery-ui-1.13.0.custom/jquery-ui.min.css" rel="stylesheet" />

    <style>

        *,
        ::before,
        ::after {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        .form-group select {
            -webkit-appearance: none;
            -moz-appearance: none;
        }

        body {
            /*min-height: 100vh;*/
        }

        .min-width-150px{
            min-width: 150px;
            display: flex;
            justify-content: space-between;
        }

        /* card-stage */
        .card-stage-wrapper {
            min-height: calc(100vh - 165px);
        }
        /* v-pills-tab */
        #v-pills-tab {
            background-color: #f6f6f6;
            width: 100px;
            z-index: 100;
            border-right: solid #b7b7b7 1px;
        }

            #v-pills-tab button {
                display: flex;
                flex-direction: column;
                align-items: center;
                padding: 0.5rem 0.25rem;
                justify-content: space-evenly;
                font-size: 0.875rem;
                font-weight: 600;
                border-radius: 0.15rem;
            }

        #v-pills-tabContent {
            top: 0;
            left: 100px;
            width: 300px;
            background-color: white;
            border-right: solid #b7b7b7 1px;
            overflow-y: auto;
            overflow-x: hidden;
            height: 100%;
        }

            #v-pills-tabContent.show {
                left: 100px;
                width: 300px;
                transform: translateX(0);
                transition: transform 0.4s ease-in-out;
            }

            #v-pills-tabContent.hide {
                left: 100px;
                transform: translateX(-300px);
                transition: transform 0.4s ease-in-out;
            }

        .tab-toggle-button {
            /*position: absolute;
            left: 100%;
            top: 50%;
            transform: translateY(-50%);
            color: #fff;*/
            /*background-color: #0d6efd;
            width: 15px;
            height: 65px;
            cursor: pointer;*/
        }
        #align-text-wrapper .dropdown-item.active, #align-text-wrapper .dropdown-item:active {
            color: #1e2125;
            background-color: #e9ecef;
        }


        .card-main-viewport{
        background-color: #fff;
        }

        .card-main-viewport.c-vw-full {
            padding: 0;
            transition: padding 0.4s ease-in-out;
        }

        .card-main-viewport.c-vw-resized {
            padding-left: 300px;
            transition: padding 0.4s ease-in-out;
        }

        /* Viewport */
        .top-controls,
        .bottom-controls {
            height: 50px;
        }

        .top-controls {
            border-bottom: solid #b7b7b7 1px;
        }

        .bottom-controls {
            border-top: solid #b7b7b7 1px;
        }

        .item-color {
            width: 0.75rem;
            height: 0.75rem;
            display: inline-block;
            background-color: black;
        }

        .btn-outline-secondary.active {
            background-color: #e6eaee;
        }

        .main-viewport {
            background-color: #f6f6f6;
            flex: 1 1 auto;
            padding: 0 15px;
            overflow: auto;
            height: calc(100vh - 100px);
        }

        .heading-text h3 {
            font-stretch: normal;
            font-style: normal;
            letter-spacing: normal;
            padding: 0px;
            margin: 0px;
            font-size: 1.125rem;
            font-weight: 700;
            line-height: 1.33;
        }

        .card-templates-search {
            height: 40px;
        }

        /* Search Field */
        .search-field {
            position: relative;
        }

        .search-icon-wrapper {
            position: absolute;
            top: 2px;
            right: 2px;
            width: 35px;
            height: 34px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }

        .head-link {
            cursor: pointer;
        }

        /* Card viewport */
        .card-main-template {
            /* I am using A5 dimension in millimeter*/
            width: 148.2mm;
            height: 209.9mm;
            margin: 0 auto;
            background-image: url("@Url.Content(ViewBag.DefaultCardTemplate)");
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            border: dashed #0d6efd 2px;
        }

        .card-item {
            border: solid #0d6efd 1px;
            /* margin-bottom: 2rem; */
            cursor: move;
            min-height: 1.25rem;
        }

        .bold-card-item>pre{
            font-weight: 700 !important;
        }

        .italic-card-item>pre{
            font-style: italic !important;
        }

        .text-underline-card-item>pre{
            text-decoration: underline !important;
        }

        #text-align-list a{
            display: flex;
            justify-content: space-between;
        }


        .card-item > pre {
            font-size: 1.5rem;
            font-family: Arial;
            text-align: center;
        }

            .card-item.ui-draggable-dragging,
            .card-item.focus {
                border: solid #0d6efd 3px;
            }

        .card-qr-code {
            height: 165px;
            width: 165px;
            background: url(@Url.Content(ViewBag.DefaultQRCode));
            background-size: contain;
        }

        .image-container{
            position: relative;
            cursor: pointer;
        }

        .hv-middle-overlay {
            transition: .5s ease;
            opacity: 0;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            text-align: center;
            width: 50%;
        }

        .image-container:hover .hv-middle-overlay {
            opacity: 1;
        }

        .image-container img {
            transition: opacity .4s ease-in-out;
            opacity: 1;
        }

        .image-container:hover img {
            opacity: 0.5;
        }


        .text {
            background-color: #04AA6D;
            color: white;
            font-size: .875rem;
            padding: .25rem;
            border-radius: .25rem;
            -webkit-user-select: none;
            -khtml-user-select: none;
            -moz-user-select: -moz-none;
            -o-user-select: none;
            user-select: none;
        }

        .color-box {
            background: rgb(0, 0, 0);
            border-radius: 20px;
            box-shadow: rgba(16, 20, 38, 0.1) 0px 0px 0px 1px inset;
            cursor: pointer;
            height: 40px;
            width: 40px;
        }
        .color-box:hover {
