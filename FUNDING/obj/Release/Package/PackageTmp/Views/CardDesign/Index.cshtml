                            <div class="color-box m-1 color-box-15"></div>
                            <div class="color-box m-1 color-box-16"></div>
                            <div class="color-box m-1 color-box-17"></div>
                            <div class="color-box m-1 color-box-18"></div>
                            <div class="color-box m-1 color-box-19"></div>
                            <div class="color-box m-1 color-box-20"></div>
