@model FUNDING.Models.CardGenerationModule.DataLayer.ContactDetailsViewModel

@{
    ViewBag.Title = "MutliField";
    ViewData["Home"] = "Home";
    Layout = "~/Views/Shared/_Customers.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">@ViewData["Title"]</h4>
    </div>
    <div class="col-md-7 align-self-center text-end">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Dashboard", "CustomerActivity")">@ViewData["Home"]</a>
                </li>
                <li class="breadcrumb-item active">@ViewData["Title"]</li>
            </ol>
        </div>
    </div>
</div>
<div class="card border-0">
    <div class="card-body">

        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.HostDetails.FullName)
                    @Html.TextBoxFor(model => model.HostDetails.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.HostDetails.PhysicalAddress)
                    @Html.TextBoxFor(model => model.HostDetails.PhysicalAddress, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.HostDetails.MobileNumber)
                    @Html.TextBoxFor(model => model.HostDetails.MobileNumber, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.HostDetails.EmailAddress)
                    @Html.TextBoxFor(model => model.HostDetails.EmailAddress, new { @class = "form-control" })
                </div>
            </div>

            <hr />
            <div class="row">
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.BossDetails.FullName)
                    @Html.TextBoxFor(model => model.BossDetails.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.BossDetails.PhysicalAddress)
                    @Html.TextBoxFor(model => model.BossDetails.PhysicalAddress, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.BossDetails.MobileNumber)
                    @Html.TextBoxFor(model => model.BossDetails.MobileNumber, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.BossDetails.EmailAddress)
                    @Html.TextBoxFor(model => model.BossDetails.EmailAddress, new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <div class="row">
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.WifeDetails.FullName)
                    @Html.TextBoxFor(model => model.WifeDetails.FullName, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.WifeDetails.PhysicalAddress)
                    @Html.TextBoxFor(model => model.WifeDetails.PhysicalAddress, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.WifeDetails.MobileNumber)
                    @Html.TextBoxFor(model => model.WifeDetails.MobileNumber, new { @class = "form-control" })
                </div>
                <div class="form-group col-3 mb-3">
                    @Html.LabelFor(model => model.WifeDetails.EmailAddress)
                    @Html.TextBoxFor(model => model.WifeDetails.EmailAddress, new { @class = "form-control" })
                </div>
            </div>

            <div class="text-end">
                <button id="submitCreateCustomers" type="submit" class="btn btn-outline-info btn-rounded">Upload</button>
                <button type="reset" class="btn btn-outline-danger btn-rounded">Clear</button>
            </div>
        }
    </div>
</div>



