@model FUNDING.BL.BusinessEntities.Masters.CustomerUsers

@{
    AjaxOptions deleteCustomerUsersAjaxOptions = new AjaxOptions();
    deleteCustomerUsersAjaxOptions.HttpMethod = "POST";
    //deleteCustomerUsersAjaxOptions.UpdateTargetId = "divCustomerUsers";
    deleteCustomerUsersAjaxOptions.OnBegin = "OnBeginRequestDelete";
    deleteCustomerUsersAjaxOptions.OnSuccess = "OnSuccessRequestDelete";
    //deleteCustomerUsersAjaxOptions.OnComplete = "OnCompleteRequestDelete";
    deleteCustomerUsersAjaxOptions.OnFailure = "OnFailureRequestDelete";
    deleteCustomerUsersAjaxOptions.Confirm = "Do you want to delete user?";
}

@using (Ajax.BeginForm(actionName: "AjaxHelperDeleteForm", controllerName: "CustomerUsers", routeValues: null,
    ajaxOptions: deleteCustomerUsersAjaxOptions, htmlAttributes: new { id = "ajaxHelperDeleteForm", @class = "d-none", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color d-none">
        @Html.HiddenFor(model => model.cust_users_sno)
        <input id="deleteBtn" type="submit" value="Delete" class="btn btn-primary d-none" />
    </div>
}