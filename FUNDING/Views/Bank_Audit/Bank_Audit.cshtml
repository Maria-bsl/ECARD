            else {
                validatedate(e);
                $(".fa").hide();
                $(".input-group-append").hide();
                $("#startdate").hide();
                $("#enddate").hide();
                $("#ddltype").hide();
                $("#lblsid").hide();
                $("#lbleid").hide();
                $("#lblact").hide();
                $("#btn").hide();
                $("#btnPdf").hide();
                $("#btnExcel").hide();
