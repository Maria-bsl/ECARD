                $("#ddltype").show();
                $("#lblsid").show();
                $("#lbleid").show();
                $("#lblact").show();
                $("#btn").show();
                $("#btnPdf").show();
                $("#btnExcel").show();
                document.getElementById("tbl-smtp").style.display = "none";
                jQuery("#tbl-smtp tbody").empty();
                if (jQuery.fn.DataTable.isDataTable("#tbl-smtp")) {
                    jQuery('#tbl-smtp').DataTable().clear().destroy();
                }
