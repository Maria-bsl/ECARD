            function initilize_intlTelInput($mobileNumber) {

                 window.intlTelInput($mobileNumber, {
                    // allowDropdown: false,
                    // autoHideDialCode: false,
                    // autoPlaceholder: "off",
                    dropdownContainer: document.body,
