@model FUNDING.BL.BusinessEntities.Masters.Events

@{
    AjaxOptions deleteEventDetailsAjaxOptions = new AjaxOptions();
    deleteEventDetailsAjaxOptions.HttpMethod = "POST";
    //deleteEventDetailsAjaxOptions.UpdateTargetId = "divEventDetails";
    deleteEventDetailsAjaxOptions.OnBegin = "OnBeginRequestDelete";
    deleteEventDetailsAjaxOptions.OnSuccess = "OnSuccessRequestDelete";
    //deleteEventDetailsAjaxOptions.OnComplete = "OnCompleteRequestDelete";
    deleteEventDetailsAjaxOptions.OnFailure = "OnFailureRequestDelete";
    deleteEventDetailsAjaxOptions.Confirm = "Do you want to delete event?";
}

@using (Ajax.BeginForm(actionName: "AjaxHelperDeleteForm", controllerName: "Events", routeValues: null,
    ajaxOptions: deleteEventDetailsAjaxOptions, htmlAttributes: new { id = "ajaxHelperDeleteForm", @class = "d-none", autocomplete = "off" }))
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color d-none">
        @Html.HiddenFor(model => model.event_det_sno)
        <input id="deleteBtn" type="submit" value="Delete" class="btn btn-primary d-none" />
    </div>
}